<div class="w-10/12 mx-auto p-3 m-16">
    <h2>Proposez une actualité</h2>
    <%= simple_form_for @actuality do |f| %>
        <%= f.input :titre, label: 'Titre' %>
        <%= f.input :description %>
        <%= f.input :image %>
        <%= f.association :patrimoine, collection: @accepted_patrimoines, label_method: :libelle, value_method: :id, label: "Patrimoine" %>
        <%= f.association :activity, collection: @accepted_activities, label_method: :title, value_method: :id, label: "Activité" %>
         <%= f.simple_fields_for :contributors do |contributor_form| %>
            <%= contributor_form.input :firstname, label: "Prénom", required: true %>
            <%= contributor_form.input :lastname, label: "Nom", required: true %>
            <%= contributor_form.input :email, label: "Email", placeholder: "albin.body@spapatrimoine.be", required: true %>        
        <% end %>
        <%= f.submit 'Soumettre' %>
    <% end %>
</div>